{
  "name": "port-control",
  "description": "Freedom port control manifest",
  "app": {
    "script": "port-control.js"
  },
  "constraints": {
    "isolation": "never"
  },
  "provides" : [
    "port-control"
  ],
  "default": "port-control",
  "api": {
    "port-control": {
      "openPortWithPmp": {
        "type": "method",
        "value": ["number", "number"],
        "ret": "number"
      },

      "probePmpSupport": {
        "type": "method",
        "value": [],
        "ret": "boolean"
      },

      "openPortWithPcp": {
        "type": "method",
        "value": ["number", "number"],
        "ret": "number"
      },

      "probePcpSupport": {
        "type": "method",
        "value": [],
        "ret": "boolean"
      },

      "openPortWithUpnp": {
        "type": "method",
        "value": ["number", "number"],
        "ret": "number"
      },

      "probeUpnpSupport": {
        "type": "method",
        "value": [],
        "ret": "boolean"
      },

      "getPrivateIp": {
        "type": "method",
        "value": [],
        "ret": "string"
      }
    }
  },
  "permissions": [
    "core.udpsocket",
    "core.rtcpeerconnection"
  ]
}
